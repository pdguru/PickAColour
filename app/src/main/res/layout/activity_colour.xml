<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ListView android:layout_width="0dp" android:layout_height="0dp"
              android:id="@+id/colourList"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_margin="5dp" app:layout_constraintBottom_toTopOf="@+id/selectedColour"
              android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="10dp" android:layout_marginStart="10dp"/>

    <Button android:layout_width="match_parent" android:layout_height="90dp"
            android:id="@+id/selectedColour" android:layout_margin="10dp"
            android:background="#fff" android:textColor="#000"
            android:shadowColor="#fff" android:shadowRadius="2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp" android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
            android:text="No colour selected" android:enabled="false"/>

</android.support.constraint.ConstraintLayout>